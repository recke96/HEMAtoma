{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.java-version$/"
      ],
      "matchStrings": [
        "^\\s*(?<currentValue>\\d+)\\s*$"
      ],
      "datasourceTemplate": "java-version",
      "depNameTemplate": "java?lts=true"
    }
  ]
}
